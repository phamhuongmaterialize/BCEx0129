                android:background="#BBBBBB" />

            <RelativeLayout
                android:id="@+id/btnLay8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#1a237e">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center_vertical"
                    android:drawableRight="@drawable/chevron_right_white"
                    android:text="@string/device_setting_bluetooth"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB" />

            <RelativeLayout
                android:id="@+id/btnLay9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#1a237e">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center_vertical"
                    android:drawableRight="@drawable/chevron_right_white"
                    android:text="@string/device_setting_content_rendering"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB" />

            <RelativeLayout
                android:id="@+id/btnLay10"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#1a237e">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center_vertical"
                    android:drawableRight="@drawable/chevron_right_white"
                    android:text="@string/device_setting_brightness"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>